<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3FBFF"
    tools:context=".partner_profile">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F3FBFF"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:background="#F3FBFF">

            <androidx.cardview.widget.CardView
                android:id="@+id/pprofilecard"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerInParent="true"
                app:cardCornerRadius="100dp">

                <ImageView
                    android:id="@+id/pprofilepic"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    android:src="@drawable/profile24" />

            </androidx.cardview.widget.CardView>

            <ImageButton
                android:id="@+id/pickbutton"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_below="@id/pprofilecard"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="-60dp"
                android:background="@drawable/circle"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                android:scaleType="centerCrop"
                android:src="@drawable/photocamera"
                android:translationX="50dp"
                android:translationY="-10dp"
                android:translationZ="5dp" />

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="User Name"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:weightSum="6">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:text="Details"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/call30"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="35dp"
                        android:src="@drawable/call30" />

                    <TextView
                        android:id="@+id/partnerphno"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="10dp"
                        android:layout_toLeftOf="@id/pphnoedit"
                        android:layout_toRightOf="@id/call30"
                        android:text="+91 9999999999"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="#676767" />

                    <Button
                        android:id="@+id/pphnoedit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@id/partnerphno"
                        android:layout_alignParentRight="true"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginRight="35dp"
                        android:layout_marginBottom="20dp"
                        android:backgroundTint="#9ED8F4"
                        android:drawableRight="@drawable/edit30"
                        android:gravity="center"
                        android:text="Edit"
                        android:textAllCaps="false"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textStyle="bold" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/email30"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="35dp"
                        android:src="@drawable/email30" />

                    <TextView
                        android:id="@+id/partneremail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="10dp"
                        android:layout_toLeftOf="@id/pemailedit"
                        android:layout_toRightOf="@id/email30"
                        android:text="abc@gmail.com"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="#676767" />

                    <Button
                        android:id="@+id/pemailedit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@id/partneremail"
                        android:layout_alignParentRight="true"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginRight="35dp"
                        android:layout_marginBottom="20dp"
                        android:backgroundTint="#9ED8F4"
                        android:drawableRight="@drawable/edit30"
                        android:gravity="center"
                        android:text="Edit"
                        android:textAllCaps="false"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textStyle="bold" />
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:text="Your Shops"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/allshops"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:paddingLeft="30dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Help ."
                android:clickable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="#4C4A4A" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Privacy ."
                android:clickable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="#4C4A4A" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Terms &amp; Condition ."
                android:clickable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="#4C4A4A" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Support"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="#4C4A4A" />
        </TableRow>
    </LinearLayout>
</ScrollView>